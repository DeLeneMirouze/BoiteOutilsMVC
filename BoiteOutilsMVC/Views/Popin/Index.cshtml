@model IEnumerable<BoiteOutilsMVC.Domaine.Personne>

@{
    ViewBag.Title = "Popin";
}

@* => pour que la popin ait un aspet de popin 
mais rien ne vous interdit d'utiliser votre propre feuille de style
*@
@Styles.Render("http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css")

<h2>Popin</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreMusicalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateNaissance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuperHeros)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blog)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointDeVie)
        </th>
    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GenreMusicalId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateNaissance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuperHeros)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Blog)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointDeVie)
        </td>
     
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {id="edit-"+item.Id, @class="edit" }) 
     
        </td>
    </tr>
}

</table>

@* c'est ici que l'on insère l'html de la popin *@
<div id="edit-popup" title="Edit"></div>

@* => charge le script responsable des affichages *@
@section Scripts {
    @Scripts.Render("~/Scripts/Custom/DemoPopin.js")       
    }

